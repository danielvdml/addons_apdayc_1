<odoo>

    <record id="view_partner_form_inherit_button" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.button</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_open_list_inmuebles" icon="fa-building">
                    <field name="count_inmuebles" widget="statinfo" string="Inmuebles"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>